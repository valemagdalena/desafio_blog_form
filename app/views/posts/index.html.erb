<h1>Publicaciones</h1>

<%= form_with(url: post_create_path, model: @post, local: true ) do |f| %>
    <%= f.label :titulo %>
    <%= f.text_field :title %>

    <%= f.label :imagen %>
    <%= f.text_field :image %>

    <%= f.label :contenido %>
    <%= f.text_field :content %>

    <%= f.submit "crear post" %>
<% end %>

<% @posts.each do |post| %>
    <div class="card mb-3" style="max-width: 540px;">
	  <div class="row g-0">
	    <div class="col-md-4">
	     <%= image_tag post.image, class: "img-fluid" %>
	    </div>
	    <div class="col-md-8">
	      <div class="card-body">
	        <h5 class="card-title"><%= post.title %></h5>
	        <p class="card-text"><%= post.content %></p>
	        <p class="card-text"><small class="text-muted"><%= post.created_at %></small></p>
	      </div>
	    </div>
	  </div>
	</div>
<% end %>